{
    "name": "Portal",
    "id": "portal",
    "version": "1.0.0",
    "description": "DevDesk Portal with nginx reverse proxy for web services",
    "options": {
        "port": {
            "type": "string",
            "default": "8080",
            "description": "Port for the portal nginx server"
        },
        "enableVnc": {
            "type": "boolean",
            "default": true,
            "description": "Include VNC link in portal"
        },
        "enableCodeServer": {
            "type": "boolean",
            "default": true,
            "description": "Include code-server link in portal"
        },
        "codeServerPort": {
            "type": "string",
            "default": "8888",
            "description": "Port for code-server (for proxy config)"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
